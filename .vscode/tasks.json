{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Install Dependencies",
			"type": "shell",
			"command": "pip",
			"args": [
				"install",
				"-r",
				"requirements.txt"
			],
			"isBackground": false,
			"problemMatcher": [],
			"group": "build"
		},
		{
			"label": "Run Streamlit App",
			"type": "shell",
			"command": "python",
			"args": [
				"-m",
				"streamlit",
				"run",
				"app.py"
			],
			"isBackground": true,
			"problemMatcher": [],
			"group": "test"
		}
	]
}